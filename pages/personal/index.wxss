
.personal-body{
  box-sizing: border-box;
  background: #fff;
}
.personal-body>view:nth-child(1){
  padding: 0 20rpx;
}
.personal-name{
  justify-content: flex-start;
  margin-top: 50rpx;
  font-size: 34rpx;
  color: #333;
}
.personal-tag{
  padding: 5rpx 10rpx;
  font-size: 20rpx;
  margin-left: 20rpx;
}
.personal-item{
  align-items: flex-start;
  justify-content: flex-start;
  color: #ccc;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
  font-size: 32rpx;
}
.personal-item text:nth-child(1){
  flex-shrink: 0;
  margin-right: 20rpx;
  color: #666;
}
.personal-item textarea{flex-grow: 1;margin: 20rpx;}
.personal-text>view:nth-child(1){
  flex-grow: 1;
  word-break: break-all;
  white-space:wrap;
  word-wrap: break-word;
  color: #ccc !important;
}
.person-nav{
  justify-content: flex-start;
  font-size: 32rpx;
  color: #666;
  padding: 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
  box-sizing: border-box;
  background-size: 20rpx auto;
  background-position: right 20rpx center;
  background-repeat: no-repeat;
  background-image: url(data:image/png;base64,);
}
.person-nav image{width: 60rpx;margin-right: 30rpx;}
.person-nav text text{color: #ccc;margin-left: 20rpx;}
.person-nav-top{
  border-top:20rpx solid #f2f2f2;
}
.personal-footer{
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  color: #666;
}
.personal-footer text:nth-child(2){color: #438cfe;}
