/* pages/help/help.wxss */
.help{
  background: #f2f2f2;
  box-sizing: border-box;
  padding-top: 30rpx
}
.help-block{
  width: 90%;
  box-sizing: border-box;
  padding-top:40rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 0 0 30rpx 5%;
  flex-direction: column;
  color: #999;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  position: relative;
  margin: 30rpx 0;
}
.avatar image{width: 100%;height: 100%;border-radius: 50%;}
.avatar view{
  width: 70rpx;
  color: #fff;
  background: #ccc;  
  border-radius: 20rpx;
  text-align: center;
  padding: 7rpx 0;
  position: absolute;
  bottom: -10rpx;
  left: 15rpx;
  font-size: 20rpx;
}
.avatar .selected{background: #438cfe;}
.help-block text:nth-child(1){font-size: 32rpx;}
.help-block text:nth-child(3){color: #666;}
.help-block text:nth-child(4){font-size: 28rpx;margin: 10rpx 0;}
.help-btn{
  width: 100%;
  margin-top: 10rpx;
  border-top:1rpx solid #f2f2f2;
  padding: 20rpx;
  box-sizing: border-box;
}
.help-btn>view{
  padding: 8rpx 20rpx;
  border-radius: 25rpx;
  border: 1rpx solid #f2f2f2;
  font-size: 24rpx;
  margin: 0 20rpx;
}
.help-btn image{
  width: 30rpx;
  margin-right: 10rpx;
}
