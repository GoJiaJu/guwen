.release-btn{
  width: auto;
  height: auto;
  padding: 15rpx;
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%) translateY(0);
  background: #fff;
  border-top-left-radius: 100rpx;
  border-top-right-radius:  100rpx;
  box-shadow: 0 -1rpx 10rpx 2rpx #f2f2f2;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.release-btn>view{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background: linear-gradient(to bottom,#9a96ff,#438cfe);
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.release-btn>view image{
  width: 50rpx;
  height: 50rpx;
}
.release-btn text{
  margin-top: 10rpx;
  font-size: 28rpx;
}
.release-body{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  background: rgba(0,0,0,.5);
}
.release-body>view{
  position: absolute;
  left: 0;
  bottom: 0;
  background: #fff;
  width: 100%;
  display: flex;
  transform: translateY(100%);
}
.release-body>view view{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 50%;
  box-sizing: border-box;
  padding: 30rpx;
}
.release-body>view view:nth-child(2){
  border-left: 1px solid #f2f2f2;
}
.release-body image{
  width: 80rpx;
  height: 80rpx;
}
.release-body text:nth-child(2){
  margin: 5px 0;
}
.release-body text+text{
  color: #999;
  font-size: 26rpx;
}