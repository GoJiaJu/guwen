.avatar{
  border-radius: 50%;
  position: relative;
  background: #fff;
  box-sizing: border-box;
}
.a-large{
  width: 150rpx;
  height: 150rpx;
}
.a-small{
  width: 70rpx;
  height: 70rpx;
}
.a-mini{
  width: 30rpx;
  height: 30rpx;
}
.avatar-padding{
  padding: 2rpx;
}
.avatar image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
}
.avatar view{
  position: absolute;
  bottom:-10rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0,0,0,.5);
  color: #fff;
  padding: 5rpx 10rpx;
  font-size: 18rpx;
  border-radius: 16rpx;
}