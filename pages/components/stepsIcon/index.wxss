/* pages/components/stepsIcon/index.wxss */
.steps{
  width: 90%;
  margin: 0 auto;
  
}
.steps>view{
  width: 100%;
  display: flex;
  align-items: center;
}
.steps-item{
  height: auto;
  flex-shrink: 0;
  flex-grow: 1;
  display: inline-flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  position: relative;
} 
.steps-item-before::before{
  content:'';
  position: absolute;
  width: 50%;
  height: 10rpx;
  background: #f2f2f2;
  top:25rpx;
  left: 0;
}
.steps-item-after::after{
  content:'';
  position: absolute;
  width: 50%;
  height: 10rpx;
  background: #f2f2f2;
  top:25rpx;
  right: 0;
}
.steps-item view{
  width:60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f2f2f2;
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.circle-select{
  background: #438cfe !important;
}
.steps-before-select::before{
  background: #438cfe !important;
}
.steps-after-select::after{
  background: #438cfe !important;
}
.steps-item view image{
  width: 30rpx;
}
.steps-item text{
  font-size: 28rpx;
  margin-top: 10rpx;
  color:#ddd;
}
.steps-before-select text{
  color: #666;
}