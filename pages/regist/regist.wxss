.regist{
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.regist-steps{
  width: 90%;
  margin-left: 5%;
}
.regist-body{
  width: 100%;
  flex-grow: 1;
  overflow: hidden;
  position: relative;
  margin-top: 40rpx;
}
.regist-body>view{
  width: 300%;
  height: auto;
  display: flex;
  transition: all .3s;
}
.regist-step{
  flex-shrink: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.regist-step1>text{
  font-size: 40rpx;
  font-weight: bold;
  color: #999;
  margin-bottom: 20rpx;
}
.regist-step1>view{
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.regist-body-card{
  width: 47%;
  height: auto;
  box-sizing: border-box;
  padding: 30rpx;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
  flex-direction: column;
  position: relative;
}
.regist-body-card image{
  width: 100%;
}
.regist-body-card text:nth-child(2){
  font-size: 40rpx;
  color: #666;
  margin-top:25rpx;
}
.regist-body-card text:nth-child(3){
  font-size: 30rpx;
  color: #999;
}
.r-submit{
  width: 100%;
  margin-top: 80rpx;
}
.card-selected{
  box-shadow: 0 0 5rpx 5rpx #eee;
}
.agreement{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 40rpx;
}
.agreement-text{color:#666;margin-left: 10rpx;}
.agreement-text text{color:#438cfe;}
.password-tips,.setp2-tips{
  width: 100%;
  font-size: 24rpx;
  color: #ccc;
  margin-top: 20rpx;
}
.setp2-tips{
  text-align: right;
  color: #438cfe;
}