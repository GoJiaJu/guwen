.login::after{
  background: #fff;
}
.header{
  width: 100%;
  height: 200rpx;
  flex-direction: column;
  padding: 60rpx 0 60rpx 0;
  font-size: 30rpx;
  color: #fff;
}
.header text{margin-top: 20rpx;}
.login-form{
  width: 90%;
  padding: 40rpx;
  border-radius: 2px;
  margin: -20rpx auto 0 auto;
  box-shadow: 0 0 2px 2px #f4f4f4;
  background: #fff;
  box-sizing: border-box;
  overflow: hidden;
}
.login-form-tab{
  display: flex;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.login-form-tab view{
  width:50%;
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 1px solid transparent;
}
.login-form-tab view.selected{
  color: #438cfe;
  border-bottom-color:#438cfe;
}
.login-form-body{
  width: 100%;
  height: auto;
  display: flex;
}
.login-form-body>view{
  width: 100%;
  flex-shrink: 0;
}
.login-form-item{
  padding:30rpx 0;
  border-bottom: 1px solid #eee;
}
.login-form-item text{
  flex-shrink: 0;
  min-width: 45px;
}
.login-form-item input{
  flex-grow: 1;
  margin: 0 20rpx;
}
.login-form-item view{
  flex-shrink: 0;
  font-size: 24rpx;
  background: #fff;
  padding: 0 20rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  border:1px solid #438cfe;
  color: #438cfe;
}
.login-submit{
  font-size: 34rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: 35rpx;
  margin-top: 50rpx;
}